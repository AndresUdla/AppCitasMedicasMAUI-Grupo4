<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCitasMedicasMAUI.Views.CrearMedicoPage"
             Title="Nuevo Médico">

    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            <Entry Placeholder="Nombre" Text="{Binding Nombre}" />
            <Entry Placeholder="Especialidad" Text="{Binding Especialidad}" />
            <Entry Placeholder="Teléfono" Text="{Binding Telefono}" Keyboard="Telephone" />
            <Entry Placeholder="Ubicación del consultorio" Text="{Binding UbicacionConsultorio}" />

            <Button Text="Guardar"
                    Command="{Binding GuardarCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White" />

            <Label Text="{Binding MensajeError}" TextColor="Red" IsVisible="{Binding IsErrorVisible}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
