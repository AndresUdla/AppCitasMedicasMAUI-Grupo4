<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCitasMedicasMAUI.Views.LoginPage"
             BackgroundColor="White"
             Title="Iniciar Sesión">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <Image Source="dotnet_bot.png" HeightRequest="150" Aspect="AspectFit" HorizontalOptions="Center" />

            <Label Text="Bienvenido" FontSize="28" HorizontalOptions="Center" />
            <Label Text="Por favor, inicia sesión para continuar" FontSize="16" HorizontalOptions="Center" />

            <Entry x:Name="CorreoEntry"
                   Placeholder="Correo electrónico"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   ClearButtonVisibility="WhileEditing" />

            <Entry x:Name="ContrasenaEntry"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   ClearButtonVisibility="WhileEditing" />

            <Button x:Name="LogginButton"
                    Text="Iniciar Sesión"
                    Clicked="LogginButton_Clicked"
                    BackgroundColor="#2C7EF0"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="45" />

            <Label x:Name="MensajeError"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="False"
                   HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
