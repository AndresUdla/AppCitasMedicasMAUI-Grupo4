<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCitasMedicasMAUI.Views.LoginPage"
             BackgroundColor="#f0f4f8"
             Title="Iniciar Sesión">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="CenterAndExpand">

            <Image Source="sistema_medico.jpg"
                   HeightRequest="180"
                   Aspect="AspectFill"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <Label Text="Bienvenido"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C3E50" />

            <Label Text="Por favor, inicia sesión para continuar"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#34495E" />

            <Entry Placeholder="Correo electrónico"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="#7f8c8d"
                   ClearButtonVisibility="WhileEditing"
                   BackgroundColor="White"
                   HeightRequest="45"
                   Text="{Binding Correo, Mode=TwoWay}" />

            <Entry Placeholder="Contraseña"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="#7f8c8d"
                   ClearButtonVisibility="WhileEditing"
                   BackgroundColor="White"
                   HeightRequest="45"
                   Text="{Binding Contrasena, Mode=TwoWay}" />

            <Button Text="Iniciar Sesión"
                    BackgroundColor="#2C7EF0"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,10,0,0"
                    Command="{Binding LoginCommand}" />

            <Label Text="{Binding MensajeError}"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="{Binding IsErrorVisible}"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
