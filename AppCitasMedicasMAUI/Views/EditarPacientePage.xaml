<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCitasMedicasMAUI.Views.EditarPacientePage"
             Title="Editar Paciente">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Nombres" />
            <Entry x:Name="NombresEntry" Placeholder="Ingrese nombres" />

            <Label Text="Apellidos" />
            <Entry x:Name="ApellidosEntry" Placeholder="Ingrese apellidos" />

            <Label Text="Cédula" />
            <Entry x:Name="CedulaEntry" Placeholder="Ingrese cédula" />

            <Label Text="Edad" />
            <Entry x:Name="EdadEntry" Keyboard="Numeric" Placeholder="Ingrese edad" />

            <Label Text="Altura (cm)" />
            <Entry x:Name="AlturaEntry" Keyboard="Numeric" Placeholder="Ingrese altura" />

            <Label Text="Peso (kg)" />
            <Entry x:Name="PesoEntry" Keyboard="Numeric" Placeholder="Ingrese peso" />

            <Label Text="Dirección" />
            <Entry x:Name="DireccionEntry" Placeholder="Ingrese dirección" />

            <Label Text="Teléfono" />
            <Entry x:Name="TelefonoEntry" Placeholder="Ingrese teléfono" />

            <Button Text="Guardar Cambios" Clicked="OnGuardarClicked" BackgroundColor="#4CAF50" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
